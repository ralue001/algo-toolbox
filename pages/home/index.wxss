.page { padding: 16rpx 24rpx 28rpx; box-sizing: border-box; background:#f7f8fa; }

/* 顶部横幅：整体居中 */
.hero {
  width: 100%;
  padding: 28rpx 24rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e8f7ff 20%, #f8fffa 100%);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.06);
  margin-bottom: 24rpx;
  text-align: center;
}
.hero-title { font-size: 36rpx; font-weight: 700; color:#111; }
.hero-sub   { margin-top: 6rpx; color:#636f7b; font-size: 26rpx; }

/* 一列大卡 or 两列都 OK；当前是一列大卡 */
.grid { display: flex; flex-direction: column; gap: 20rpx; }

/* 基础卡片：内容居中 */
.tile {
  background: #fff;
  border-radius: 22rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.07);
  border: 1rpx solid #eef1f4;
  display: flex;
  flex-direction: column;
  align-items: center;     /* 水平居中 */
  text-align: center;      /* 文本居中 */
  min-height: 160rpx;
}

.i    { font-size: 48rpx; line-height: 1; margin-bottom: 8rpx; }
.name { font-size: 30rpx; font-weight: 700; }
.desc { margin-top: 6rpx; color:#76808a; font-size: 24rpx; }

/* 选中态：变绿 */
.tile.active {
  background: linear-gradient(135deg,#34c759,#27b34a);
  color:#fff;
  border: none;
}
.tile.active .desc { color: rgba(255,255,255,.92); }

/* 按压态 */
.pressed { transform: scale(.98); transition: transform .08s ease; }

.footer { text-align: center; color:#9aa3ab; font-size: 22rpx; margin-top: 28rpx; }
