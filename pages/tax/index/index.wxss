.page { padding: 24rpx; }
.card { background: #fff; padding: 28rpx; border-radius: 20rpx; box-shadow: 0 6rpx 24rpx rgba(0,0,0,.06); margin-bottom: 28rpx; }
.title { font-size: 34rpx; font-weight: 600; margin-bottom: 24rpx; }
.subTitle { font-size: 28rpx; font-weight: 600; margin: 20rpx 0; }
.row { display: flex; align-items: center; justify-content: space-between; padding: 14rpx 0; }
.label { color: #333; font-size: 28rpx; }
.ipt { flex: 1; margin-left: 20rpx; padding: 18rpx 22rpx; background: #f7f8fa; border-radius: 14rpx; }
.radios { display: flex; gap: 36rpx; margin-left: auto; }
.radio { display: flex; align-items: center; gap: 10rpx; }

.btns { display: flex; margin-top: 16rpx; }
.kv { display: flex; align-items: center; justify-content: space-between; padding: 10rpx 0; }
.kv .v { font-weight: 600; }
.divider { height: 1px; background: #eee; margin: 18rpx 0; }
.tips { color: #888; font-size: 24rpx; margin-top: 14rpx; line-height: 1.5; }
