.page { padding: 24rpx; background:#f6f7f9; min-height:100vh; }
.card { background:#fff; border-radius:16rpx; padding:24rpx; margin-bottom:24rpx; box-shadow:0 2rpx 8rpx rgba(0,0,0,.04); }
.title { font-weight: 600; font-size: 32rpx; margin-bottom: 8rpx; }
.subTitle { margin-top: 8rpx; color:#1d2129; }
.row { display:flex; align-items:center; padding:18rpx 0; }
.label { width: 220rpx; color:#333; }
.ipt { flex:1; border:1rpx solid #e5e6eb; border-radius:12rpx; padding:16rpx 20rpx; }
.radios { display:flex; gap: 28rpx; }
.radio { display:flex; align-items:center; gap:10rpx; color:#333; }
.btns { display:flex; padding-top:12rpx; }
.kv { display:flex; justify-content:space-between; padding:14rpx 0; border-bottom:1rpx dashed #eee; }
.kv:last-child { border-bottom:none; }
.v { color:#1f7aff; }
.divider { height:1rpx; background:#f0f0f0; margin:16rpx 0; }
.tips { color:#86909c; font-size: 24rpx; margin-top: 8rpx; line-height: 1.6; }
